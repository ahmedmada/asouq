<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemDetails">
    <ImageView
        android:id="@+id/itemIM"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_height="150dp" />
    <TextView
        android:id="@+id/nameTV"
        android:hint="name"
        android:gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/itemIM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/priceTV"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:hint="price before"
        android:gravity="right"
        android:layout_below="@+id/nameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/priceafter"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:hint="price after"
        android:gravity="right"
        android:layout_below="@+id/priceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detailsTV"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:hint="price after"
        android:gravity="right"
        android:layout_below="@+id/priceafter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/nameTV"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="12dp"
        app:backgroundTint="@android:color/background_light"
        app:srcCompat="@drawable/fav" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/crt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fab"
        android:layout_centerVertical="true"
        app:backgroundTint="@android:color/background_light"
        app:srcCompat="@drawable/cart" />
    <Button
        android:id="@+id/add"
        android:text="أضف إلى العربه"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>